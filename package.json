{
  "name": "blog",
  "version": "2.0.0",
  "description": "htr3n's blog :: technology, thoughts, opinions, rants",
  "main": "index.js",
  "scripts": {
    "remote": "hugo -v --cleanDestinationDir --baseURL \"https://htr3n.github.io/\"",
    "local": "hugo -v --cleanDestinationDir --buildDrafts --buildFuture --baseURL \"http://blog.test:8888/\"",
    "hugo-watch": "hugo server -v -w --buildDrafts --cleanDestinationDir --baseURL \"http://blog.test:1313/\"",
    "dev": "npm-run-all --parallel scss-watch hugo-watch",
    "scss-watch": "gulp watch",
    "scss-build": "gulp release",
    "prod": "npm-run-all --serial scss-build remote"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:htr3n/htr3n-blog.git"
  },
  "keywords": [
    "blog",
    "hugo",
    "static site generator",
    "gulp",
    "sass",
    "hyde-hyde",
    "postcss"
  ],
  "author": "htr3n",
  "license": "MIT",
  "homepage": "https://github.com/htr3n/htr3n-blog",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "cssnano": "^4.0.3",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-postcss": "^7.0.1",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "npm-run-all": "^4.1.3"
  }
}
